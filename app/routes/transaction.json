{
  "/transaction/transfer": {
    "POST": {
      "route": "transfer",
      "jwt": true,
      "validators": {
        "body": {
          "fromAddress": {
            "notEmpty": true,
            "errorMessage": "is missing"
          },
          "toAddress": {
            "notEmpty": true,
            "errorMessage": "is missing"
          },
          "currencyAddress": {
            "notEmpty": true,
            "errorMessage": "is missing"
          },
          "amount": {
            "notEmpty": true,
            "errorMessage": "is missing"
          }
        }
      }
    }
  },
  "/transaction/revert/id/:id": {
    "POST": {
      "route": "revert",
      "jwt": true,
      "validators": {
        "params": {
          "id": {
            "notEmpty": true,
            "errorMessage": "is missing"
          }
        }
      }
    }
  },
  "/transaction/id/:id": {
    "GET": {
      "route": "getTransactionById",
      "jwt": true,
      "validators": {
        "params": {
          "id": {
            "optional": true
          }
        }
      }
    }
  },
  "/transaction/transmit": {
    "POST": {
      "route": "transmit",
      "jwt": true,
      "validators": {
        "body": {
          "currencyId": {
            "optional": true
          }
        }
      }
    }
  },
  "/transaction/transmit/id/:id": {
    "GET": {
      "route": "getTransmitById",
      "jwt": true,
      "validators": {
        "params": {
          "id": {
            "optional": true
          }
        }
      }
    }
  },
  "/transaction/bc/id/:id": {
    "GET": {
      "route": "getBlockchainTransactionById",
      "jwt": true,
      "validators": {
        "params": {
          "id": {
            "optional": true
          }
        }
      }
    }
  },
  "/transaction/bc/unknown": {
    "GET": {
      "route": "getUnknownBlockchainTransactions",
      "jwt": true
    }
  },
  "/transaction/bc/known": {
    "POST": {
      "route": "markBlockchainTransactionsAsKnown",
      "jwt": true,
      "validators": {
        "body": {
          "ids": {
            "notEmpty": true,
            "errorMessage": "is missing"
          }
        }
      }
    }
  },
  "/transaction/bc/state": {
    "POST": {
      "route": "updateBlockchainTransactionsState",
      "jwt": true,
      "validators": {
        "params": {
          "address": {
            "optional": true
          },
          "type": {
            "optional": true
          },
          "limit": {
            "optional": true
          }
        }
      }
    }
  }
}