    "@colucom/osseus-server": "^0.2.0",
    "async": "~2.6.1",
    "bignumber.js": "~7.2.1",
    "bip39": "~2.5.0",
    "cln-solidity": "~1.0.0",
    "mongoose-time": "~0.1.0",
    "truffle-contract": "~3.0.6",
